{
  "name": "one-page-report-skbau",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "dist": "npm run build && electron-builder --windows nsis"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "electron": "^26.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.5.4",
    "vite": "^5.1.0",
    "@vitejs/plugin-react": "^4.0.0",
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.skbau.onepagereport",
    "productName": "One Page Report SK Bau",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build/icons"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}